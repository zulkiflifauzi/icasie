@model Icasie.Models.ViewModelConference

@{
    ViewBag.Title = "Add New Conference";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Conference</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        
        <div class="form-group">
            @Html.Label("Name", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" }, })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Start Date", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.StartDateString, new { htmlAttributes = new { @class = "datepicker form-control" }, })
                @Html.ValidationMessageFor(model => model.StartDate)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("End Date", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.EndDateString, new { htmlAttributes = new { @class = "datepicker form-control" }, })
                @Html.ValidationMessageFor(model => model.EndDate)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Paper Submission Start Date", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.PaperSubStartDateString, new { htmlAttributes = new { @class = "datepicker form-control" }, })
                @Html.ValidationMessageFor(model => model.PaperSubStartDate)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Paper Submission End Date", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.PaperSubEndDateString, new { htmlAttributes = new { @class = "datepicker form-control" }, })
                @Html.ValidationMessageFor(model => model.PaperSubEndDate)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $.fn.datepicker.defaults.format = "dd-mm-yyyy";
            $('.datepicker').datepicker();
        });
    </script>
}
